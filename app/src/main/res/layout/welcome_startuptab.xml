<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen300dp"
    android:layout_height="@dimen/dimen100dp"
    android:background="@drawable/startup_bg"
    android:layout_gravity="center"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/dimen48dp"
    tools:context=".login_signup_stage.fragments.WelcomeFragment">

    <TextView
        android:padding="@dimen/dimen16dp"
        android:id="@+id/txtLogin"
        android:gravity="center"
        android:textColor="#000"
        android:text="LOG IN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="@dimen/dimen16dp"
        android:layout_below="@+id/txtLogin"
        android:id="@+id/txtCreateAccount"
        android:gravity="center"
        android:textColor="#000"
        android:text="CREATE ACCOUNT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
