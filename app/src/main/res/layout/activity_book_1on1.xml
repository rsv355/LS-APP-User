<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical"
    tools:context="com.ls.mybrandtherapist.success_toolkit.SuccessToolkitActivity">

    <include layout="@layout/app_bar" />

    <ImageView
        android:layout_marginTop="@dimen/dimen16dp"
        android:layout_gravity="center"
        android:layout_width="@dimen/dimen48dp"
        android:layout_height="@dimen/dimen48dp"
        android:src="@drawable/applogo_white" />

    <ScrollView
        android:layout_margin="@dimen/dimen16dp"
        android:background="#80000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:padding="@dimen/dimen10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Spinner
            android:padding="@dimen/dimen4dp"
            android:id="@+id/spSession"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/layout_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <LinearLayout
            android:layout_marginTop="@dimen/dimen20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:singleLine="true"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="First Name"
            android:padding="@dimen/dimen8dp"
            android:background="@drawable/layout_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            <EditText
                android:singleLine="true"
                android:layout_marginLeft="@dimen/dimen10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Last Name"
                android:padding="@dimen/dimen8dp"
                android:background="@drawable/layout_rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <EditText
            android:singleLine="true"
            android:layout_marginTop="@dimen/dimen10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Personal/Professional"
            android:padding="@dimen/dimen8dp"
            android:background="@drawable/layout_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:singleLine="true"
            android:layout_marginTop="@dimen/dimen10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Business Name"
            android:padding="@dimen/dimen8dp"
            android:background="@drawable/layout_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:singleLine="true"
            android:layout_marginTop="@dimen/dimen10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Website"
            android:padding="@dimen/dimen8dp"
            android:background="@drawable/layout_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/dimen10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:singleLine="true"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Email"
                android:padding="@dimen/dimen8dp"
                android:background="@drawable/layout_rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:singleLine="true"
                android:layout_marginLeft="@dimen/dimen10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Phone"
                android:padding="@dimen/dimen8dp"
                android:background="@drawable/layout_rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <EditText
            android:singleLine="true"
            android:layout_marginTop="@dimen/dimen10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Preferred Date/Time"
            android:padding="@dimen/dimen8dp"
            android:background="@drawable/layout_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/dimen16dp"
            android:background="@drawable/layout_rounded_green"
            android:textColor="#fff"
            android:textStyle="bold"
            android:gravity="center"
            android:text="REQUEST"
            android:padding="@dimen/dimen8dp"
            android:singleLine="true"
            android:layout_marginTop="@dimen/dimen24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
