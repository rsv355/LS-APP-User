<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical"
    tools:context="com.ls.mybrandtherapist.success_toolkit.SuccessToolkitActivity">

    <include layout="@layout/app_bar" />

    <include layout="@layout/item_header_tips"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen16dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_rounded_transperent"
            android:padding="@dimen/dimen8dp"
            android:text="BOOK TO SPEAK"
            android:textColor="#fff"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen16dp"
            android:background="@drawable/layout_rounded_transperent"
            android:padding="@dimen/dimen8dp"
            android:text="HOST WORKSHOP"
            android:textColor="#fff"
            android:textSize="18sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen16dp"
            android:background="@drawable/layout_rounded_transperent"
            android:padding="@dimen/dimen8dp"
            android:text="CUSTOM ENGAGEMENT"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>
